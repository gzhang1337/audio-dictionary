<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Submit a Pronunciation"
        android:id="@+id/textView30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pronWord"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Write what you are pronouncing" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Recording"
        android:id="@+id/startRecord"
        android:textAllCaps="false"
        android:layout_below="@+id/seekBarRecord"
        android:layout_alignStart="@+id/checkSpan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playback"
        android:id="@+id/playButton"
        android:textAllCaps="false"
        android:layout_marginRight="15dp"
        android:layout_alignBaseline="@+id/startRecord"
        android:layout_alignBottom="@+id/startRecord"
        android:layout_alignStart="@+id/textView30" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/checkEng"
        android:layout_below="@+id/playButton"
        android:layout_alignStart="@+id/submitPron"
        android:layout_marginTop="31dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish"
        android:id="@+id/checkSpan"
        android:layout_alignTop="@+id/checkEng"
        android:layout_alignEnd="@+id/submitPron" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Pronunciation"
        android:id="@+id/submitPron"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarRecord"
        android:layout_below="@+id/pronWord"
        android:layout_marginTop="33dp"
        android:layout_alignStart="@+id/pronWord"
        android:layout_alignEnd="@+id/pronWord"
        android:indeterminate="false" />

</RelativeLayout>